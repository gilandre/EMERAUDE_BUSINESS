{
  "dashboard": {
    "title": "Emeraude Business - Application Overview",
    "tags": ["emeraude", "application"],
    "panels": [
      {
        "title": "HTTP Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (route)",
            "legendFormat": "{{route}}"
          }
        ]
      },
      {
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}}"
          }
        ]
      },
      {
        "title": "HTTP Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_errors_total[5m])) by (route)",
            "legendFormat": "{{route}}"
          }
        ]
      }
    ]
  }
}
