{
  "name": "emeraude-business",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "node scripts/generate-pwa-icons.js",
    "test:api": "node scripts/test-api-health.js",
    "dev": "next dev",
    "dev:api": "next dev -p 3001",
    "dev:web": "cross-env API_URL=http://localhost:3001 next dev -p 3000",
    "dev:all": "concurrently -n api,web,edge -c blue,green,yellow \"npm run dev:api\" \"npm run dev:web\" \"node scripts/ensure-edge-runtime-watch.js\"",
    "dev:infra": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:infra:down": "docker-compose -f docker-compose.dev.yml down",
    "build": "next build",
    "analyze": "ANALYZE=true next build",
    "prestart": "node scripts/prepare-standalone.js",
    "start": "node .next/standalone/server.js",
    "start:api": "cross-env PORT=3001 node .next/standalone/server.js",
    "start:web": "cross-env API_URL=http://localhost:3001 PORT=3000 node .next/standalone/server.js",
    "start:all": "concurrently -n api,web \"npm run start:api\" \"npm run start:web\"",
    "lint": "next lint",
    "seed": "tsx prisma/seed.ts",
    "worker:alerts": "tsx src/workers/alert-processor.worker.ts",
    "worker:scheduler": "tsx src/workers/alert-scheduler.worker.ts",
    "worker:reports": "tsx src/workers/report-scheduler.worker.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@sentry/nextjs": "^8.0.0",
    "@tanstack/react-query": "^5.90.20",
    "@types/validator": "^13.15.10",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.34.0",
    "check-disk-space": "^3.4.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "exceljs": "^4.4.0",
    "html2canvas": "^1.4.1",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^3.0.0-rc.2",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.460.0",
    "next": "^15.2.6",
    "next-auth": "^4.24.10",
    "nodemailer": "^7.0.13",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.12.0",
    "sonner": "^1.7.0",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^2.5.4",
    "twilio": "^5.12.1",
    "uuid": "^13.0.0",
    "validator": "^13.15.26",
    "web-push": "^3.6.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.9",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/speakeasy": "^2.0.10",
    "@types/web-push": "^3.6.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
